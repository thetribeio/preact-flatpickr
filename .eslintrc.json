{
    "root": true,
    "extends": [
        "airbnb",
        "@thetribe"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "rules": {
        "react/jsx-indent": ["error", 4],
        "react/jsx-indent-props": ["error", 4],
        "func-names": 0,
        "no-await-in-loop": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".json", ".jsx"]
            }
        }
    },
    "overrides": [
        {
            "files": "webpack.config.js",
            "env": {
                "node": true
            }
        }
    ]
}
